<!DOCTYPE html>

<style>

</style>


<html>
<head>
  <link rel='stylesheet' href='/stylesheets/products.css'/>
</head>

<body>

  <div class="wrapper">
{{>navbar}}
  
    <section id="home" class="sec-main">
      <h1 class="main-heading">Welcome to Epic Sporting Goods</h1>
    </section>
   
   <section id="about" class="sec-about">
      <div class="container">
     <h1>
              Clothes
            </h1>
        <hr />
  
  {{# each products}}

   <div class="row">
     {{# each this}}
          <div class="col-md-4">
           
            <img class="center-block" src="{{this.imagePath}}"/>
            <h2>{{this.title}}</h2>
            <p>{{this.price}}</p>
             
                        <div class="clearfix">
                            <div class="price pull-left">{{ this.price }}</div>
                            <a href="/add-to-cart/{{this._id}}" class="btn btn-raised btn-success pull-right">
                                <i class="fa fa-plus" aria-hidden="true"> Add to shopping cart</i>
                            </a>
                        </div>
          </div>

          {{/each}}
        </div>
        {{/each}}
  
    
    <footer id="footer">
      <div class="container">
        <ul class="soc-media-ul">
          <li>
            <a href="" class="fa fa-twitter" target="_blank"></a>
          </li>
  
          <li>
            <a href="" class="fa fa-google-plus" target="_blank"></a>
          </li>
  
          <li>
            <a href="" class="fa fa-linkedin" target="_blank"></a>
          </li>
  
          <li>
            <a href="" class="fa fa-behance" target="_blank"></a>
          </li>
  
          <li>
            <a href="" class="fa fa-envelope"></a>
          </li>
        </ul>
      </div>
    </footer>
  </div>


</body>
</html>
